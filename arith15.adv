{ comments are enclosed by curly-braces;
  no nested comments are allowed  }

{ evaluation entry point }
Compute x => Eval x Done;

{ evaluate expressions first }
Eval (op x y) k => Eval x (op y k);

{ values }
Eval v (op y k) => Eval y (op v k);
Eval v Done => v;

{ numeric addition }
Add Z k w => k w;
Add (S x) k w => Add x k (S w);

{ numeric multiplication }
Mult Z k w => k Z;
Mult (S x) k w => Mult x (Add w k) w;

. { end of rules }
